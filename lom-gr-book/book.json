{
  "title":  "The LOM-GR Book",
  "language": "el",
  "styles": {
    "website": "styles/website.css",
    "pdf": "styles/pdf.css"
  },
  "variables": {
    "book_version": "0.0.1"
  },
  "links": {
    "sidebar": {
      "Digital School": "http://dschool.edu.gr"
    },
    "sharing": {
      "weibo": null
    }
  },
  "plugins": [
    "-mathjax",
    "-infinitescroll",
    "-image-captions",
    "richquotes",
    "jsbin",
    "anchors",
    "callouts",
    "-autocover"
  ],
  "pluginsConfig": {
    "fontSettings": {
      "theme": "white",
      "family": "sans"
    },
    "image-captions": {
      "caption": "Fig. _BOOK_IMAGE_NUMBER_: _CAPTION_"
    }
  },
  "pdf": {
    "headerTemplate": "_SECTION_",
    "footerTemplate": "_TITLE_, _PAGENUM_",
    "fontSize": 12,
    "paperSize": "a4"
  }
}
